{
  "name": "nakafa",
  "version": "1.0.0",
  "bin": {
    "nakafa": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "test": "turbo test",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "bump-deps": "npx npm-check-updates --deep -u -x react-day-picker,recharts,better-auth,@polar-sh/better-auth,@polar-sh/sdk",
    "bump-ui": "npx shadcn@latest add --all --overwrite -c packages/design-system",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.turbo packages/*/.turbo .turbo .next apps/*/.next",
    "deps-check-www": "cd apps/www && depcheck --ignore-dirs=node_modules || true",
    "deps-check-api": "cd apps/api && depcheck --ignore-dirs=node_modules || true",
    "deps-check-mcp": "cd apps/mcp && depcheck --ignore-dirs=node_modules || true"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.2",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.5.8",
    "@types/node": "^24.9.2",
    "depcheck": "^1.4.7",
    "tsup": "^8.5.0",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "ultracite": "^6.0.5",
    "vitest": "^4.0.5"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.20.0",
  "type": "module"
}
