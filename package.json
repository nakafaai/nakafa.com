{
  "name": "nakafa",
  "version": "1.0.0",
  "bin": {
    "nakafa": "dist/index.js"
  },
  "files": [
    "dist/index.js"
  ],
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "start": "turbo start",
    "lint": "ultracite check",
    "format": "ultracite fix",
    "format:doctor": "ultracite doctor",
    "test": "turbo test",
    "test:watch": "turbo test:watch",
    "test:ui": "turbo test:ui",
    "test:coverage": "turbo test:coverage",
    "analyze": "turbo analyze",
    "translate": "turbo translate",
    "boundaries": "turbo boundaries",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "bump-deps": "pnpm dlx npm-check-updates --deep -u -x recharts,better-auth",
    "bump-ui": "pnpm dlx shadcn@latest add --all --overwrite -c packages/design-system",
    "clean": "rm -rf node_modules apps/*/node_modules packages/*/node_modules apps/*/.turbo packages/*/.turbo .turbo .next apps/*/.next apps/*/.react-email packages/*/.react-email",
    "clean:ts": "find . -name '*.tsbuildinfo' -type f -delete && find . -name 'tsconfig.tsbuildinfo' -type f -delete",
    "deps-check-www": "cd apps/www && depcheck --ignore-dirs=node_modules || true",
    "deps-check-api": "cd apps/api && depcheck --ignore-dirs=node_modules || true",
    "deps-check-mcp": "cd apps/mcp && depcheck --ignore-dirs=node_modules || true"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.13",
    "@changesets/changelog-github": "^0.5.2",
    "@changesets/cli": "^2.29.8",
    "@effect/language-service": "^0.72.0",
    "@repo/typescript-config": "workspace:*",
    "@turbo/gen": "^2.8.2",
    "@types/node": "^25.2.0",
    "depcheck": "^1.4.7",
    "tsup": "^8.5.1",
    "turbo": "^2.8.2",
    "typescript": "^5.9.3",
    "ultracite": "^7.1.3"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.28.2",
  "type": "module"
}
