{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "ultracite": {
      "type": "remote",
      "url": "https://docs.ultracite.ai/mcp"
    },
    "convex": {
      "type": "local",
      "command": [
        "npx",
        "-y",
        "convex@latest",
        "mcp",
        "start"
      ],
    }
  }
}
