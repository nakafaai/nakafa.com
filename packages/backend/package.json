{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "convex dev --tail-logs",
    "setup": "convex dev --once && convex env set VALIDATE_ENV=true",
    "seed": "convex dev --once && convex run init",
    "deploy": "convex deploy",
    "generate-schema": "bunx @better-auth/cli generate --config convex/betterAuth/auth.ts --output convex/betterAuth/generatedSchema.ts -y",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@auth/core": "0.37.0",
    "@convex-dev/better-auth": "^0.9.6",
    "@convex-dev/migrations": "^0.2.9",
    "@polar-sh/better-auth": "^1.1.9",
    "@polar-sh/sdk": "^0.37.0",
    "better-auth": "1.3.27",
    "convex": "^1.28.0",
    "convex-helpers": "^0.1.104"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*"
  }
}
