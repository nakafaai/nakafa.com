    "ai": "^5.0.106",
    "better-auth": "1.3.34",
    "buffer": "^6.0.3",
    "convex": "^1.30.0",
    "convex-helpers": "^0.1.106",
    "hono": "^4.10.7",
    "jsonrepair": "^3.13.1",
