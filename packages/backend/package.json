{
  "name": "@repo/backend",
  "version": "0.0.0",
  "private": true,
  "scripts": {
    "dev": "convex dev --tail-logs",
    "setup": "convex dev --once && convex env set VALIDATE_ENV=true",
    "seed": "convex dev --once && convex run init",
    "deploy": "convex deploy",
    "generate-schema": "bunx @better-auth/cli generate --config convex/betterAuth/auth.ts --output convex/betterAuth/generatedSchema.ts -y",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false"
  },
  "dependencies": {
    "@auth/core": "0.37.0",
    "@convex-dev/better-auth": "^0.8.6",
    "better-auth": "1.3.8",
    "convex": "^1.27.2",
    "convex-helpers": "^0.1.104"
  },
  "devDependencies": {
    "@repo/typescript-config": "workspace:*"
  }
}
