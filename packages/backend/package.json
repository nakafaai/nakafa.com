{
  "name": "@repo/backend",
  "version": "1.3.0",
  "private": true,
  "scripts": {
    "dev": "convex dev --tail-logs",
    "setup": "convex dev --once && convex env set VALIDATE_ENV=true",
    "seed": "convex dev --once && convex run init",
    "deploy": "convex deploy",
    "insights": "convex insights",
    "generate-schema": "pnpm dlx @better-auth/cli generate --config convex/betterAuth/auth.ts --output convex/betterAuth/generatedSchema.ts -y",
    "clean": "git clean -xdf .cache .turbo dist node_modules",
    "typecheck": "tsc --noEmit --emitDeclarationOnly false",
    "test": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "sync": "tsx scripts/sync-content.ts full",
    "sync:incremental": "tsx scripts/sync-content.ts incremental",
    "sync:validate": "tsx scripts/sync-content.ts validate",
    "sync:verify": "tsx scripts/sync-content.ts verify",
    "sync:clean": "tsx scripts/sync-content.ts clean",
    "sync:reset": "tsx scripts/sync-content.ts reset",
    "sync:prod": "tsx scripts/sync-content.ts full --prod",
    "sync:prod:incremental": "tsx scripts/sync-content.ts incremental --prod",
    "sync:prod:verify": "tsx scripts/sync-content.ts verify --prod",
    "sync:prod:clean": "tsx scripts/sync-content.ts clean --prod",
    "sync:prod:reset": "tsx scripts/sync-content.ts reset --prod"
  },
  "dependencies": {
    "@convex-dev/aggregate": "^0.2.1",
    "@convex-dev/better-auth": "^0.10.10",
    "@convex-dev/migrations": "^0.3.1",
    "@convex-dev/resend": "^0.2.3",
    "@convex-dev/workflow": "^0.3.4",
    "@convex-dev/workpool": "^0.3.1",
    "@polar-sh/sdk": "^0.43.1",
    "@repo/ai": "workspace:*",
    "@t3-oss/env-nextjs": "^0.13.10",
    "ai": "^6.0.97",
    "better-auth": "1.4.9",
    "buffer": "^6.0.3",
    "convex": "^1.32.0",
    "convex-helpers": "^0.1.113",
    "hono": "^4.12.1",
    "jsonrepair": "^3.13.2",
    "nanoid": "^5.1.6",
    "strip-ansi": "^7.1.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@edge-runtime/vm": "^5.0.0",
    "@repo/contents": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@vitest/coverage-istanbul": "^4.0.18",
    "convex-test": "^0.0.41",
    "glob": "^13.0.6",
    "tsx": "^4.21.0",
    "vitest": "^4.0.18"
  }
}
