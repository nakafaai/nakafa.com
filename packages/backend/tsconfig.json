{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "skipLibCheck": true,
    "jsx": "react",

    "target": "ESNext",
    "lib": ["ES2021", "dom", "ESNext.Array", "DOM.Iterable"],
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true,
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "isolatedModules": true,
    "noEmit": true,

    "paths": {
      "@/*": ["./*"],
      "@repo/*": ["../../packages/*"]
    }
  },
  "include": ["./**/*"],
  "exclude": ["./convex/_generated"]
}
